@model PrivateSquares.Web.Models.Register
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box">
        <div class="box-header">
            <center>
                Registration
            </center>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-lg-4">&nbsp;</div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="email2">Email:</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="pass3">Password:</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="pass2">Confirm Password:</label>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="from-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="sub-btn">
                        <input type="submit" class="btn ui-btn info" value="Register">
                    </div>
                </div>
                <div class="col-lg-4">&nbsp;</div>

            </div>
        </div>

    </div>
}

@Html.Raw(TempData["msg"])

