
@{
    ViewData["Title"] = "Register";
}

<environment include="Development">
    <link rel="stylesheet" href="~/plugin/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/plugin/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/plugin/css/animate.min.css">
    <link rel="stylesheet" href="~/plugin/jquery-nice-select-1.1.0/css/nice-select.css">
    <link rel="stylesheet" href="~/plugin/perfect-scrollbar/css/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/css/app.css">

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/slider-js/owl.carousel.js"></script>
</environment>
<environment exclude="Development">
    <link href="https://fonts.googleapis.com/css?family=Quicksand:700|Raleway|Tangerine" rel="stylesheet">
</environment>

<div class="box">
    <div class="box-header">
        <center>
            Registration
        </center>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-4">&nbsp;</div>
            <div class="col-lg-4">
                <form class="register-frm frm" method="post">
                    <div class="form-group">
                        <label for="email2">Email:</label>
                        <input type="email" required name="email" autocomplete="email" id="Email">
                    </div>
                    <div class="form-group">
                        <label for="pass3">Password:</label>
                        <input type="password" required name="password" id="Password">
                    </div>
                    <div class="form-group">
                        <label for="pass2">Confirm Password:</label>
                        <input type="password" required name="password" id="ConPassword">
                    </div>
                    <div class="sub-btn">
                        <input type="submit" class="btn ui-btn info" value="REGISTER">
                    </div>
                </form>
            </div>
            <div class="col-lg-4">&nbsp;</div>

        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("form").submit(function (e) {
            e.preventDefault();
            var user = {
                Email: $("#Password").val(),
                password: $("#Password").val()
            }
            $.post("http://localhost:56681/api/Account/", user, function (data) { 
                alert("Saved");
            });
        });
    });
</script>

